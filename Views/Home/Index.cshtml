@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4" style="color: darkgoldenrod;">Welcome to Khumalo Craft</h1>
    <br />
    <p style=" font-size: 125%; font-family:Bookman Old Style;">
        High-end jewellery for the practical woman<br />
        Elegant, long-lasting jewellery that is suitable for daily wear. <br />
        Constructed from robust, hypoallergenic, tarnish-free titanium and <br />stainless steel, and finished with a solid gold plating
    </p>
    <br />
</div>

